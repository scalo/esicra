<?xml version = '1.0' encoding = 'windows-1252'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>esicra</display-name>
    <listener>
        <listener-class>it.saga.egov.esicra.servlet.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>it.saga.egov.esicra.servlet.DownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfoSistemaServlet</servlet-name>
        <servlet-class>it.saga.egov.esicra.servlet.InfoSistemaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EesTimerServlet</servlet-name>
        <servlet-class>it.saga.egov.esicra.timer.servlet.EesTimerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EesTimerConfServlet</servlet-name>
        <servlet-class>it.saga.egov.esicra.timer.servlet.EesTimerConfServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EesInvia</servlet-name>
        <servlet-class>it.saga.egov.esicra.coordinator.servlet.EesInvia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EesRicevi</servlet-name>
        <servlet-class>it.saga.egov.esicra.coordinator.servlet.EesRicevi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EesNotifica</servlet-name>
        <servlet-class>it.saga.egov.esicra.coordinator.servlet.EesNotifica</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EesPingServlet</servlet-name>
        <servlet-class>it.saga.egov.esicra.servlet.EesPingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EesPongServlet</servlet-name>
        <servlet-class>it.saga.egov.esicra.servlet.EesPongServlet</servlet-class>
    </servlet>
    <servlet>
    <servlet-name>rpcrouter</servlet-name>
    <display-name>Apache-SOAP RPC Router</display-name>
    <description>no description</description>
    <servlet-class>org.apache.soap.server.http.RPCRouterServlet</servlet-class>
    <init-param>
      <param-name>faultListener</param-name>
      <param-value>org.apache.soap.server.DOMFaultListener</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>messagerouter</servlet-name>
    <display-name>Apache-SOAP Message Router</display-name>
    <servlet-class>org.apache.soap.server.http.MessageRouterServlet</servlet-class>
    <init-param>
      <param-name>faultListener</param-name>
      <param-value>org.apache.soap.server.DOMFaultListener</param-value>
    </init-param>
  </servlet>
    <servlet>
        <servlet-name>XmlServlet</servlet-name>
        <servlet-class>it.saga.egov.maad.servlet.XmlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RpcServlet</servlet-name>
        <servlet-class>it.saga.egov.maad.servlet.RpcServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InfoSistemaServlet</servlet-name>
        <url-pattern>/InfoSistema</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EesTimerServlet</servlet-name>
        <url-pattern>/EesTimerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EesTimerConfServlet</servlet-name>
        <url-pattern>/EesTimerConfServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EesInvia</servlet-name>
        <url-pattern>/EesInvia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EesRicevi</servlet-name>
        <url-pattern>/EesRicevi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EesNotifica</servlet-name>
        <url-pattern>/EesNotifica</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EesPingServlet</servlet-name>
        <url-pattern>/EesPingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EesPongServlet</servlet-name>
        <url-pattern>/EesPongServlet</url-pattern>
    </servlet-mapping>
    <!--
    <servlet-mapping>
        <servlet-name>CompareDbServlet</servlet-name>
        <url-pattern>/CompareDbServlet</url-pattern>
    </servlet-mapping>
    -->
  <servlet-mapping>
    <servlet-name>rpcrouter</servlet-name>
    <url-pattern>/servlet/rpcrouter</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>messagerouter</servlet-name>
    <url-pattern>/servlet/messagerouter</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/DownloadServlet</url-pattern>
    </servlet-mapping>
    <!--
    <servlet-mapping>
    <servlet-name>AggiornaPratica</servlet-name>
    <url-pattern>/AggiornaPratica</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XmlServlet</servlet-name>
        <url-pattern>/XmlServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RpcServlet</servlet-name>
        <url-pattern>/RpcServlet</url-pattern>
    </servlet-mapping>
    -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <mime-mapping>
        <extension>html</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>txt</extension>
        <mime-type>text/plain</mime-type>
    </mime-mapping>
    <welcome-file-list>
        <welcome-file>EesMenu.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <taglib>
        <taglib-uri>"http://hibernate.org/taglib"</taglib-uri>
        <taglib-location>/WEB-INF/lib/hibtags3.jar</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>"http://jakarta.apache.org/taglibs/string-1.1"</taglib-uri>
        <taglib-location>/WEB-INF/lib/taglibs-string.jar</taglib-location>
    </taglib>
    
    <resource-ref>
        <description>Nodo Datasource (postgreSQL)</description>
        <res-ref-name>jdbc/NodoDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>Pat Datasource</description>
        <res-ref-name>jdbc/PatDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Area Responsabile</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>administrators</role-name>
            <role-name>responsabile</role-name>
            <role-name>amministratore</role-name>
            <role-name>operatore</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/EsicraLogin.jsp</form-login-page>
            <form-error-page>/LoginError.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Admin</description>
        <role-name>administrators</role-name>
    </security-role>
    <security-role>
        <description>Responsabile per gestione dei task</description>
        <role-name>responsabile</role-name>
    </security-role>
    <security-role>
        <description>Operatore di esicra</description>
        <role-name>operatore</role-name>
    </security-role>
    <security-role>
        <description>Amministratore gestione utenti</description>
        <role-name>amministratore</role-name>
    </security-role>
    <security-role>
        <description>Operatore</description>
        <role-name>operatore</role-name>
    </security-role>
   
</web-app>
